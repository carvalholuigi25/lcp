{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@applocale/*": ["./src/app/[locale]/*"],
      "@assets/*": ["./public/*"],
      "@styles/*": ["./src/app/[locale]/styles/*"],
      "@i18n/*": ["./src/app/i18n/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/[locale]/components/footer.js",
    "src/app/[locale]/components/header.js",
    "src/app/[locale]/api/sendemail/sendemail.js",
    "src/app/[locale]/api/test.js",
    "dist/types/**/*.ts",
    "src/app/[locale]/utils/authUtils.ts",
    "out/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
